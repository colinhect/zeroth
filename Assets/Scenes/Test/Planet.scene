---
sceneType: ZerothScene
base: Scenes/Base/Base.scene
entities:
  - name: Observer
    base: Test/Observer.entity
    components:
      - componentType: TransformComponent
        localPosition: [ 0, -250, 0 ]
  - name: Planet
    components:
      - componentType: PlanetComponent
        name: Endromin
        meanRadius: 50
        patchResolution: 16
        patchMaterial: Hect/Materials/OpaqueSolid.material
  - name: Light
    components:
    - componentType: DirectionalLightComponent
      direction: [ -0.5, -0.5, -0.75 ]
      color: [ 1.5, 1.5, 1.5 ]
  - name: Light
    components:
    - componentType: DirectionalLightComponent
      direction: [ 0.5, 0.5, 0.75 ]
      color: [ 1.5, 1.5, 1.5 ]
  - name: Indor
    base: Ships/Indor.entity
    components:
      - componentType: TransformComponent
        localPosition: [ 0, 200, 0 ]
  - name: Cube
    components:
      - componentType: TransformComponent
        localPosition: [ 0, 240, 0 ]
      - componentType: BoundingBoxComponent
      - componentType: MeshComponent
        surfaces:
          - mesh: Test/Cube.Main.mesh
            material: Test/MetalCrate.material
      - componentType: RigidBodyComponent
        mass: 1
        mesh: Test/Cube.Main.mesh
