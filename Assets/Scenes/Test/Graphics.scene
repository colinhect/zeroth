---
base: Hect/Scenes/Default.scene
componentTypes:
  - ObserverCamera
systemTypes:
  - PlayerInputSystem
  - ObserverCameraSystem
entities:
  - base: Test/Observer.entity
  - components:
    - type: LightProbe
      texture: Test/Space.texture
    - type: SkyBox
      texture: Test/Space.texture
    - type: DirectionalLight
      direction: [ 1, 0.2, 0.2 ]
      color: [ 0.5, 0.5, 0.5 ]
  - components:
      - type: Transform
        localPosition: [ 0, 10, 0 ]
      - type: BoundingBox
      - type: Model
        surfaces:
          - mesh: Test/Cube.Main.mesh
            material: Test/MetalCrate.material
  - components:
      - type: Transform
        localPosition: [ -10, 10, 0 ]
      - type: BoundingBox
      - type: Model
        surfaces:
          - mesh: Test/Cube.Main.mesh
            material: Test/Dusty.material
  - components:
      - type: Transform
        localPosition: [ -15, 10, 0 ]
      - type: BoundingBox
      - type: Model
        surfaces:
          - mesh: Test/Cube.Main.mesh
            material: Test/Dusty.material
  - components:
      - type: Transform
        localPosition: [ 10, 10, 0 ]
      - type: BoundingBox
      - type: Model
        surfaces:
          - mesh: Test/Cube.Main.mesh
            material: Test/MetalCrate.material
